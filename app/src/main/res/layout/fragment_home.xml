<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="73dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    <!-- android:fontFamily="@font/source_serif_pro" -->
                    android:text="AFFINITY"
                    android:textColor="#000000"
                    android:textFontWeight="600"
                    android:textSize="28dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/bt_home_search"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_search"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="227dp"
                android:background="#d9d9d9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingRight="8dp"
                android:weightSum="5">

                <Button
                    android:id="@+id/bt_home_top"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_category"
                    android:text="상의"
                    android:padding="0dp"
                    />

                <Button
                    android:id="@+id/bt_home_bottom"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_category"
                    android:padding="0dp"
                    android:text="하의"
                    />

                <Button
                    android:id="@+id/bt_home_outer"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_category"
                    android:text="아우터"
                    android:padding="0dp"
                    />

                <Button
                    android:id="@+id/bt_home_shoes"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_category"
                    android:text="신발"
                    android:padding="0dp"
                    />

                <Button
                    android:id="@+id/bt_home_accessory"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_category"
                    android:includeFontPadding="false"
                    android:text="악세서리"
                    android:padding="0dp"
                    />
            </LinearLayout>

            <com.capstone.affinity_ad.ExpandableHeightGridView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/home_item_grid"
                android:numColumns="2"
                android:padding="10dp"
                android:stretchMode="columnWidth"
                android:gravity="center"
                android:isScrollContainer="false"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="55dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>